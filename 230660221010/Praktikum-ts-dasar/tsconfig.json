{
  "compilerOptions": {
    /* Layout folder */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Output */
    "sourceMap": true,
    "declaration": false,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module & Syntax */
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
